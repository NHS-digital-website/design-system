{# Set classes #}
{%- set classNames = "nhsd-a-link" -%}
{%- if params.classes -%}
  {% set classNames = classNames + " " + params.classes %}
{%- endif -%}

{# Set label #}
{%- set label = "Simple link" -%}
{%- if params.label -%}
  {% set label = params.label %}
{%- endif -%}

{# Set URL and target #}
{%- set href="#" %}
{% set target = "" -%}

{%- if params.href %}
  {%- set href = params.href -%}
{% endif -%}

<a class="{{ classNames }}" href="{{ href }}" {%- if  params.external or params.newTab %} target="_blank"{% endif -%}{%- if params.external %} rel="external"{% endif -%}>{{ label }}
  <span class="nhsd-t-sr-only">
  {%- if  params.external -%}
    (external link, opens in a new tab)
  {%- elif params.newTab -%}
    (opens in a new tab)
  {%- endif -%}
  </span>
</a>
