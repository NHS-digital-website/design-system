{%- from "../../../njk/macros/atoms.njk" import
  nhsd_a_tab,
  nhsd_a_horizontal_rule
-%}

{#- Set classes -#}
{%- set classNames = "nhsd-m-tabs" -%}
{%- if params.classes -%}
  {%- set classNames = classNames + " " + params.classes -%}
{%- endif -%}

<nav class="{{ classNames }}">
  <div role="tablist">
    {% for tab in params.tabs -%}
      {{ nhsd_a_tab(tab) }}
    {%- endfor %}
    {%- if params.horizontalLine -%}
      {{nhsd_a_horizontal_rule(params.horizontalLine)}}
    {%- endif -%}
  </div>
</nav>
