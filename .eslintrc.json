{
    "extends": "airbnb-base",

    "parser": "babel-eslint",

    "rules":{
      "eol-last": [2, "always"],
      "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
      "indent": [0, "space"],
      "no-multiple-empty-lines": [2, { "max": 1, "maxEOF": 0 }],
      "no-tabs": 0,
      "no-param-reassign": [
        "error", {
          "props": false
        }
      ]
    },

    "settings": {
      "import/resolver": {
        "alias": {
          "map": [
            ["@", "./src/nhsd/script-core"]
          ]
        }
      }
    }
  }
